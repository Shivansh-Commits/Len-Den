<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.lenden.BillPrintController">
   <top>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="42.0" prefWidth="291.0" text="Invoice" wrapText="true" BorderPane.alignment="CENTER">
         <font>
            <Font name="Segoe UI Semibold" size="25.0" />
         </font>
      </Label>
   </top>
   <center>
      <Label fx:id="billLabel" contentDisplay="CENTER" text="Label" wrapText="true" BorderPane.alignment="CENTER">
         <font>
            <Font name="Courier New" size="15.0" />
         </font>
      </Label>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="62.0" prefWidth="291.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="print" mnemonicParsing="false" onMouseClicked="#printBill" prefHeight="34.0" prefWidth="109.0" text="Print" />
            <Button fx:id="close" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#closePreviewWindow" prefHeight="34.0" prefWidth="109.0" text="Close" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
